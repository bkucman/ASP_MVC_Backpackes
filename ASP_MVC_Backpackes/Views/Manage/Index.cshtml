@model ASP_MVC_Backpackes.Models.IndexViewModel
@{
    ViewBag.Title = "Zarządzaj kontem";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Możliwa tylko zmiana hasła</h4>
    <hr style="border-top: 3px double #FF3C9C ">
    <dl class="dl-horizontal">
        <dt>Hasło:</dt>
        <dd>
            
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Zmień hasło", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Utwórz", "SetPassword")
            }
            
        </dd>
    </dl>
    <hr style="border-top: 3px double #FF3C9C ">
</div>
