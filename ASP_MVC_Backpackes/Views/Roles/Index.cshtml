@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Role";
}

<h2>Role</h2>

    @Html.Partial("_buttons")
<hr style="border-top: 3px double #FF3C9C ">
<table class="table">
    <tr style="background:#14CC93 !important">
        <th>
            <p>Nazwa</p>
        </th>
        <th></th>
    </tr>

    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new { roleName = @role.Name }) |
                <span onclick="return confirm('Napewo xD')"><a href="/Roles/Delete?RoleName=@role.Name" class="delLink" style="color: red;">Usuń</a></span> |
                
            </td>
        </tr>
    }
</table>
